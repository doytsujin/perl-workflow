<actions>

<!-- this is the action name, used in the workflow -->
   <action name="TIX_NEW"
           class="App::Action::TicketCreate">
      <description>Create a new ticket</description>
      <field name="subject"
             description="Subject of ticket"
             is_required="yes"/>
      <field name="description"
             description="Text describing the problem and any details to reproduce, if possible"
             is_required="yes"/>
      <field name="creator"
             description="ID of user who is creating"
             is_required="yes"/>
      <field name="due_date"
             description="Due date"/>

      <validator name="DateValidator">
         <arg>$due_date</arg>
      </validator>
   </action>

   <action name="TIX_COMMENT"
           class="App::Action::TicketComment">
      <field name="ticket"
             description="Ticket to comment on"
             is_required="yes"/>
      <field name="comment"
             description="Comment to add"
             is_required="yes"/>
      <field name="current_user"
             description="User doing the commenting"
             is_required="yes"/>
   </action>

   <action name="TIX_EDIT"
           class="App::Action::TicketUpdate">
      <field name="ticket"
             description="Ticket to edit"
             is_required="yes"/>
      <field name="current_user"
             description="User working on the ticket"
             is_required="yes"/>
   </action>

   <action name="TIX_CLOSE"
           class="App::Action::TicketUpdate">
      <field name="ticket"
             description="Ticket to close"
             is_required="yes"/>
      <field name="current_user"
             description="User closing the ticket"
             is_required="yes"/>
   </action>

   <action name="TIX_REOPEN"
           class="App::Action::TicketUpdate">
      <field name="ticket"
             description="Ticket to reopen"
             is_required="yes"/>
      <field name="current_user"
             description="User reopening the ticket"
             is_required="yes"/>
   </action>

</actions>
