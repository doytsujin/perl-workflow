<validators>

<!--
 Validators can be specified by name...
-->
   <validator name="DateValidator"
             class="Validator::DateFormat">

<!--
 ...contain descriptive information
-->
      <description>Validator to ensure dates are proper</description>

<!--
 ... and define extra parameters used by the validator; these can be
 overridden by the caller of the Action and/or Validator - we don't
 care what they are
-->
      <param name="date_format" value="%Y-%m-%d %h:%m"/>

   </validator>

   <validator name="WeekdayValidator">
              class="Validator::IsWeekday">
      <description>Validator to ensure a given date is a weekday</description>
   </validator>

</validators>

